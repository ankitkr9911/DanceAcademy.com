extends base.pug

block scripts 
    scripts(src="../static/index.js")

block style
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact" ,method="POST",class="myForm")
            input(type="text", class="InputClass",name="name",placeholder="Enter Your Name")
            input(type="text", class="InputClass",name="age",placeholder="Enter Your Age")
            input(type="text", class="InputClass",name="gender",placeholder="Enter Your Gender")
            input(type="text", class="InputClass",name="phoneNo",placeholder="Enter Your Phone Number")
            input(type="text", class="InputClass",name="email",placeholder="Enter Your E-mail Id")
            input(type="text", class="InputClass",name="address",placeholder="Enter Your Address")
            input(type="text", class="InputClass",name="description",placeholder="Enter Your Concern")
            btn(class="btn")
                |Submit

    

